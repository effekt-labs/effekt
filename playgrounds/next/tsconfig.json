{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@": ["../../packages/effekt/src"],
      "@/*": ["../../packages/effekt/src/*"],
      "#effekt": ["../../packages/effekt/src"],
      "#effekt/*": ["../../packages/effekt/src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "./dist/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
