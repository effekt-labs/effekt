{
  "name": "effekt",
  "version": "0.2.0",
  "author": "Ivo Dolenc",
  "description": "Universal web animation platform.",
  "license": "MIT",
  "repository": "ivodolenc/effekt",
  "homepage": "https://github.com/ivodolenc/effekt",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./easing": {
      "types": "./dist/types/easing/index.d.ts",
      "import": "./dist/easing/index.mjs"
    },
    "./interaction": {
      "types": "./dist/types/interaction/index.d.ts",
      "import": "./dist/interaction/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "playgrounds/*"
  ],
  "keywords": [
    "effekt",
    "animate",
    "animations",
    "web-animations",
    "interaction",
    "javascript",
    "typescript",
    "universal",
    "animation",
    "platform",
    "engine",
    "tween"
  ],
  "scripts": {
    "dev:vite": "npm run dev -w @playground/vite",
    "dev:sveltekit": "npm run dev -w @playground/sveltekit",
    "test": "vitest -c test/vitest.config.ts",
    "test:utils": "vitest -c test/utils/vitest.config.ts",
    "test:easing": "vitest -c test/easing/vitest.config.ts",
    "build": "hyperbundler",
    "lint": "eslint -c .config/eslint.config.js .",
    "lint:fix": "eslint -c .config/eslint.config.js --fix .",
    "format": "prettier --config .config/prettier.config.js --write .",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "@types/node": ">=20.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hypernym/bundler": "^0.9.3",
    "@hypernym/eslint-config": "^3.2.0",
    "@hypernym/prettier-config": "^3.1.0",
    "@hypernym/tsconfig": "^2.1.0",
    "@types/node": "^22.5.1",
    "eslint": "^9.9.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
